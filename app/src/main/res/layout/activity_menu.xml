<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FF5722"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Offer Slider -->
        <ViewFlipper
            android:id="@+id/offerSlider"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/toolbar"
            android:layout_margin="12dp"
            android:autoStart="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:flipInterval="3000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/offer1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/offer2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/offer3" />
            </androidx.cardview.widget.CardView>
        </ViewFlipper>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/offerSlider"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:hint="ðŸ” Search food..."
                android:paddingLeft="8dp"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#FF5722" />
        </LinearLayout>

        <!-- Category Buttons -->
        <LinearLayout
            android:id="@+id/categoryTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchLayout"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="4">

            <Button
                android:id="@+id/allBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="ðŸ´ All"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pizzaBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:elevation="2dp"
                android:text="ðŸ• Pizza"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/drinksBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:elevation="2dp"
                android:text="ðŸ¥¤ Drinks"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sidesBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:elevation="2dp"
                android:text="ðŸŸ Sides"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/categoryTabs"
            android:paddingBottom="100dp" />

        <!-- Floating Cart -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cartFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_cart"
            app:backgroundTint="@android:color/holo_red_dark"
            app:fabSize="mini"
            app:tint="@android:color/white" />

        <!-- Order Status -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/orderStatusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:backgroundTint="#FF9800"
            app:fabSize="mini"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
