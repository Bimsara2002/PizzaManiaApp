<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chief_pizza"
        android:scaleType="fitCenter"
        android:contentDescription="App Logo" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PizzaMania"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_below="@id/appLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"/>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvTitle"
        android:layout_margin="16dp"
        android:hint="🔍 Search your favorite food..."
        android:textColor="#212121"
        android:textColorHint="#757575"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <!-- Category Buttons -->
    <LinearLayout
        android:id="@+id/categoryTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="4">

        <Button
            android:id="@+id/allBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍴 All"
            android:textColor="#000000"
            android:backgroundTint="#FF9800"
            android:textStyle="bold"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/pizzaBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍕 Pizza"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/drinksBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🥤 Drinks"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/sidesBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍟 Sides"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- RecyclerView for Menu Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cartFab"
        android:layout_below="@id/categoryTabs"
        android:layout_marginTop="2dp"
        android:paddingBottom="120dp" />

    <!-- Floating Order Status Button (Bottom Left) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/orderStatusFab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_agenda"
        app:backgroundTint="#FF9800"
        app:tint="@android:color/white" />

    <!-- Floating Cart Button (Bottom Right) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cartFab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_menu_view"
        app:backgroundTint="#FF5722"
        app:tint="@android:color/white" />

</RelativeLayout>
