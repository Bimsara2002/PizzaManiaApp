<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="28dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="App Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

        </androidx.cardview.widget.CardView>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ• Pizza Mania"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as Admin or Customer"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="42dp"
            android:fontFamily="sans-serif" />

        <!-- Admin Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FF7043">

            <Button
                android:id="@+id/btnAdmin"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="ðŸ‘¨â€ðŸ’¼ Admin Dashboard"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" />

        </androidx.cardview.widget.CardView>

        <!-- Customer Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#43A047">

            <Button
                android:id="@+id/btnCustomer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="ðŸ‘¤ Order as Customer"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" />

        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Freshly baked happiness, just for you!"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</ScrollView>
