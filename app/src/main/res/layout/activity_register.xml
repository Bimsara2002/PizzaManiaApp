<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <!-- Dark Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/chief_pizza"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PizzaMania"
        android:textColor="#FF5722"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register New Account"
        android:textColor="#DDDDDD"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Register Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/registerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/tvSubtitle"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Username -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@android:drawable/ic_lock_lock"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />

            <!-- Mobile -->
            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />

            <!-- Address -->
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="18dp"
                android:drawableStart="@android:drawable/ic_menu_compass"
                android:drawablePadding="8dp"
                android:hint="Home Address"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FF9800"
                android:text="REGISTER"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Go to Login Button -->
            <Button
                android:id="@+id/btnGoLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#FF9800"
                android:text="Already have an account? Login"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Image with Rounded Corners -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hot_pizza"
            android:scaleType="centerCrop"
            android:contentDescription="Hot Pizza" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>
